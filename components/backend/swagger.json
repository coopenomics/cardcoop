          },
          "issued_at": {
            "format": "date-time",
            "type": "string",
            "description": "Дата выпуска карты",
            "example": "2023-01-01T12:00:00Z"
          },
          "card_type": {
            "type": "string",
            "description": "Тип карты",
            "example": "standard"
          },
          "is_active": {
            "type": "boolean",
            "description": "Активна ли карта",
