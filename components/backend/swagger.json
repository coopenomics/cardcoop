    "securitySchemes": {
      "bearer": {
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "type": "http"
      }
    },
    "schemas": {
      "InitiateRegistrationInputDTO": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "description": "Email пользователя",
            "example": "user@example.com"
          }
        },
        "required": [
          "email"
        ]
      },
      "CompleteRegistrationInputDTO": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "description": "Email пользователя",
            "example": "user@example.com"
          },
          "hash_key": {
            "type": "string",
            "description": "Хэш-ключ для завершения регистрации",
            "example": "secureHash123"
          },
          "uuid": {
            "type": "string",
            "description": "Уникальный идентификатор запроса",
            "example": "uuid-123e4567-e89b-12d3-a456-426614174000"
          },
          "salt": {
            "type": "string",
            "description": "Серверная соль для защиты данных",
            "example": "random-server-salt-example"
          }
        },
        "required": [
          "email",
          "hash_key",
          "uuid",
          "salt"
        ]
      },
      "CompleteLoginResponseDTO": {
        "type": "object",
        "properties": {
          "access_token": {
            "type": "string",
            "description": "Токен доступа для авторизации",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
          },
          "refresh_token": {
            "type": "string",
            "description": "Токен для обновления доступа",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
          }
        },
        "required": [
          "access_token",
          "refresh_token"
        ]
      },
      "InitiateLoginInputDTO": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "description": "Email пользователя",
            "example": "user@example.com"
          }
        },
        "required": [
          "email"
        ]
      },
      "CompleteLoginInputDTO": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "description": "Email пользователя",
            "example": "user@example.com"
          },
          "hash_key": {
            "type": "string",
            "description": "Хэш-ключ для завершения входа",
            "example": "secureHash123"
          },
          "uuid": {
            "type": "string",
            "description": "Уникальный идентификатор запроса",
            "example": "uuid-123e4567-e89b-12d3-a456-426614174000"
          }
        },
        "required": [
          "email",
          "hash_key",
          "uuid"
        ]
      },
      "RefreshTokenInputDTO": {
        "type": "object",
        "properties": {
          "refresh_token": {
            "type": "string",
            "description": "Refresh-токен для обновления токена доступа",
            "example": "refreshtoken123"
          }
        },
        "required": [
          "refresh_token"
        ]
      },
      "LogoutInputDTO": {
        "type": "object",
        "properties": {
          "access_token": {
            "type": "string",
            "description": "Access-токен для удаления",
            "example": "accesstoken123"
          },
          "refresh_token": {
            "type": "string",
            "description": "Refresh-токен для удаления",
            "example": "refreshtoken123"
          }
        },
        "required": [
          "access_token",
          "refresh_token"
        ]
      },
      "CardMetaDTO": {
        "type": "object",
        "properties": {
          "version": {
            "type": "number",
            "description": "Версия модели данных карты",
            "example": 1
          },
          "card_type": {
            "type": "string",
            "description": "Тип карты",
            "example": "standard"
          },
          "valid_until": {
            "format": "date-time",
            "type": "string",
            "description": "Дата окончания действия карты",
            "example": "2030-01-01"
          },
          "is_active": {
            "type": "boolean",
            "description": "Активна ли карта",
            "example": true,
            "default": true
          }
        },
        "required": [
          "version",
          "is_active"
        ]
      },
      "IssueCardInputDTO": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "description": "Имя пользователя, которому будет выдана карта",
            "example": "user123"
          },
          "coopname": {
            "type": "string",
            "description": "Название кооператива",
            "example": "coop_example"
          },
          "encrypted_key": {
            "type": "string",
            "description": "Зашифрованный приватный ключ",
            "example": "encryptedKey123456abcdef"
          },
          "encrypted_data": {
            "type": "string",
            "description": "Зашифрованные данные, связанные с картой",
            "example": "encryptedData123456abcdef"
          },
          "meta": {
            "description": "Метаданные, связанные с картой",
            "example": {
              "version": 1,
              "card_type": "standard"
            },
            "allOf": [
              {
                "$ref": "#/components/schemas/CardMetaDTO"
              }
            ]
          }
        },
        "required": [
          "username",
          "coopname",
          "encrypted_key",
          "encrypted_data",
          "meta"
        ]
      },
      "IssueCardResponseDTO": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Уникальный идентификатор карты",
            "example": "123e4567-e89b-12d3-a456-426614174000"
          },
          "username": {
            "type": "string",
            "description": "Имя пользователя, связанного с картой",
            "example": "username123"
          },
          "coopname": {
            "type": "string",
            "description": "Название кооператива",
            "example": "coop_example"
          },
          "issued_at": {
            "format": "date-time",
            "type": "string",
            "description": "Дата выпуска карты",
            "example": "2023-01-01T12:00:00Z"
          },
          "card_type": {
            "type": "string",
            "description": "Тип карты",
            "example": "standard"
          },
          "is_active": {
            "type": "boolean",
            "description": "Активна ли карта",
            "example": true
          }
        },
        "required": [
          "id",
          "username",
          "coopname",
          "issued_at",
          "card_type",
          "is_active"
        ]
      },
      "SchemaItem": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "example": "object",
            "description": "Type of the schema"
          },
          "properties": {
            "type": "object",
            "description": "Properties of the schema"
          },
          "required": {
            "example": [
              "field1",
              "field2"
            ],
            "description": "Required fields",
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "type",
          "properties"
        ]
      },
      "SchemaResponseDTO": {
        "type": "object",
        "properties": {
          "oneOf": {
            "description": "List of schema variants based on type",
